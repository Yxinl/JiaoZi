<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <style>
        .empty {
            width: 100%;
            height: 20px;
            background-color: azure;
        }

        a:hover {
            text-decoration: none;
        }

        .main .logo {
            margin-left: 197px;
        }

        .main .sousuo {
            border: 1px solid #cccccc;
            box-shadow: 0 0 5px cornflowerblue;
            border-radius: 22px;
            width: 560px;
            margin: -80px 400px;
            position: relative;
        }

        .main .sinput {
            width: 480px;
            height: 30px;
            outline: none;
            border: none;
            border-right: 1px solid;
        }

        .sousuo .bt {
            position: absolute;
            width: 51px;
            height: 30px;
            background-color: red;
            color: white;
            right: 0;
            top: 0;
            border: none;
            border-radius: 0 15px 15px 0;
        }

        .main .lis {
            width: 480px;
            margin-top: 90px;
            margin-left: 380px;
        }

            .main .lis ul {
                list-style: none;
            }

                .main .lis ul li {
                    float: left;
                    margin-left: 20px;
                    font-size: 12px;
                }

            .main .lis a {
                text-decoration: none;
            }

        .Tx {
            width: 101px;
            height: 50px;
            margin-top: -65px;
            margin-left: 1400px;
        }


        .sty {
            margin-left: 30px;
            margin-top: -20px;
        }

        .na {
            /*width:1759px;*/
            width: 1383px;
            height: 40px;
            background-color: dimgray;
            text-align: center;
        }

            .na span {
                width: 70px;
                height: 40px;
                line-height: 40px;
                display: inline-block;
                margin-left: 20px;
            }

            .na a {
                text-decoration: none;
                color: aliceblue;
            }

                .na a:hover {
                    color: darkred;
                }

        .car {
            position: relative;
            top: -41px;
            left: 200px;
            display: inline-block;
            width: 100px;
            height: 30px;
            line-height: 30px;
            text-align: center;
            border: 1px solid #ccc;
        }

        #toTop {
            position: fixed;
            width: 50px;
            height: 50px;
            right: 0;
            bottom: 0;
            display: none;
        }
    </style>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <div class="empty"></div>
    <div class="main" style="margin-left:100px; height:130px;">
        <div class="logo">
            <img src="~/images/Mall/logo.jpg" style="width:120px;height:100px;">
        </div>
        <div class="sousuo">
            <span class="glyphicon glyphicon-search" style="margin-left:9px; margin-top: 3px;top:8px;"></span>
            @using (Html.BeginForm("Sear", "Mall", FormMethod.Post, new { @class = "sty" }))
            {
                <input type="text" id="search" name="search" class="sinput" placeholder="请输入关键字">
                <button value="搜索" class="bt">搜索</button>
            }
        </div>
        <div class="lis">
            <ul>
                <li><a href="#" style="color:red;">英语教资用书</a> </li>
                <li><a href="#">数学教资用书</a> </li>
                <li><a href="#">语文教资用书</a> </li>
                <li><a href="#">教育学</a> </li>
                <li><a href="#">心理学</a> </li>
            </ul>
        </div>
        <span class="car">
            <a href="@Url.Action("OrderDetails","Mall",new { id=Session["User_id"]})" style="color:red">我的购物车 </a>
        </span>
        <span class="badge" style="position:relative;left:190px;top:-60px;border-radius:50%;background-color:coral" id="Amount">@Html.Action("Num", "Mall")</span>    @*  此处的50需要进行更改  与数据库中的数据保持一致*@

    </div>
    <div class="Tx">
        @*<img src="~/images/Mall/tx.jpg">
            <p style="text-align: center;margin-top: 2px; color:palevioletred"><span>Hi!您好</span></p>*@
        @Html.Partial("TX")
    </div>
    @Html.Action("Nav", "Mall")
    <div>
        @RenderBody()
    </div>
    <div id="toTop"><img src="~/images/Css/totop.jpg" style="width:50px;height:50px;" title="回到顶部" /></div>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script>
    $(window).scroll(function () {
        var height = $(document).scrollTop();
        if (height != 0) {
            $("#toTop").show();
        }
        else
            $("#toTop").hide();
    })
    $("#toTop").click(function () {
        scrollTo(0, 0);
    })
</script>