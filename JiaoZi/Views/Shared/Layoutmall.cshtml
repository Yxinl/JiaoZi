

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.staticfile.org/twitter-bootstrap/4.1.0/css/bootstrap.min.css">
    <style>
        .main .logo {
            margin-left: 197px;
        }

        .main .sousuo {
            border: 1px solid #cccccc;
            box-shadow: 0 0 5px cornflowerblue;
            border-radius: 22px;
            width: 560px;
            margin: -80px 400px;
            position: relative;
        }

        .main .sinput {
            width: 480px;
            height: 30px;
            outline: none;
            border: none;
            border-right: 1px solid;
        }

        .sousuo .bt {
            position: absolute;
            width: 51px;
            height: 30px;
            background-color: red;
            color: white;
            right: 0;
            top: 0;
            border: none;
            border-radius: 0 15px 15px 0;
        }

        .main .lis {
            width: 480px;
            margin-top: 90px;
            margin-left: 380px;
        }

            .main .lis ul {
                list-style: none;
            }

                .main .lis ul li {
                    float: left;
                    margin-left: 20px;
                    font-size: 12px;
                }

            .main .lis a {
                text-decoration: none;
            }

        .main .Tx {
            width: 200px;
            height: 120px;
            margin-top: -140px;
            margin-left: 1050px;
        }

        .Tx img {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            margin-left: 60px;
            margin-top: 5px;
        }

        .sty {
            margin-left: 30px;
            margin-top: -21px;
        }
    </style>

</head>
