<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 教资服务网</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/shouye.css" rel="stylesheet" />
    <link href="~/Content/ionic.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/ionic.bundle.min.js"></script>
    <style>
        #tx {
            width: 101px;
            height: 50px;
            float: right;
            margin-top: -49px;
            border: 1px solid #ffffff;
            margin-right: 120px;
            border-radius: 10px;
        }

            #tx li {
                list-style: none;
                margin-bottom: 4px;
                border-radius: 4px;
                text-align: center;
            }

            #tx .ll {
                position: relative;
                right: 96px;
                display: none;
            }

        #toTop {
            position: fixed;
            width: 50px;
            height: 50px;
            right: 0;
            bottom: 0;
            display: none;
        }

        #bodydiv {
            max-width: 1800px;
            padding-left: 0px;
            padding-right: 0px;
        }
    </style>
</head>
<body style="background-color:#f1e9e1;height:800px;overflow-y:auto">
    <div class="navbar navbar-inverse navbar-fixed-top" id="Mydaohang">
        <div class="container-fluid">
            <div style="width:50px;height:50px;float:left;margin-left:30px">
                <img src="~/images/beijing/未标题-1.gif" style="width:45px;height:45px;" />
            </div>
            <div class="navbar-header" style="margin-left:240px;">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("教资考试服务网", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("考试中心", "KSZX", "Home")</li>*@
                    <li>@Html.ActionLink("教资资讯", "Index", "News")</li>
                    <li>@Html.ActionLink("个人空间", "Index", "Kongjian")</li>
                    <li>@Html.ActionLink("备考资源库", "Index", "Resource")</li>
                    <li>@Html.ActionLink("考试论坛", "Index", "Luntan")</li>
                    <li>@Html.ActionLink("备考书店", "Index", "Mall")</li>
                </ul>
            </div>
        </div>
        @Html.Partial("TX")
    </div>
    @*class="container body-content "*@
    <div id="bodydiv">
        @RenderBody()
        @*<hr />*@
        <div id="toTop"><img src="~/images/Css/totop.jpg" style="width:50px;height:50px;" title="回到顶部" /></div>
        <footer style="height:300px;">
                <p>&copy; @DateTime.Now.Year - jiaozi</p>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<script>
    $(function () {
        $("#tx").mouseover(function () {
            $(".ll").css("display", "block");

        })
    })
    $(window).scroll(function () {
        var height = $(document).scrollTop();
        if (height != 0) {
            $("#toTop").show();
        }
        else
            $("#toTop").hide();
    })
    $("#toTop").click(function () {
        scrollTo(0, 0);
    })
</script>