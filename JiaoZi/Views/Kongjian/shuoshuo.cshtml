@model JiaoZi.Models.Kongjianban
<!--发说说-->
@{
    Layout = "~/Views/Shared/Layoutkongjian.cshtml";

}
<link rel="stylesheet" href="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://cdn.staticfile.org/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
<style>
    #shuoshuoinput {
        max-width: 50%;
    }

    #jiantou {
        padding-right: 20px;
        text-align: left;
    }

    #shuocontent {
        padding-left: 0px;
    }
</style>
<div class="row">
    <!--左-->
    <div class="col-md-2" style="background-color:gainsboro;"></div>
    <!--中-->
    <div class="col-md-8" style="background-color:white;">
        <div>
            <style>
                .shuoshuoinput {
                    height: 100px;
                    width: 500px;
                    background-color: antiquewhite;
                }
            </style>
            <link href="~/Content/zui.min.css" rel="stylesheet" />
            <script src="~/Scripts/jquery.js"></script>
            <script src="~/Scripts/zui.min.js"></script>
            <link href="~/Content/ueditor.min.css" rel="stylesheet" />
            <link href="~/kindeditor/kindeditor.min.css" rel="stylesheet" />
            <script src="~/kindeditor/kindeditor.min.js"></script>

            @using (Html.BeginForm("shuoshuo", "Kongjian", FormMethod.Post))
            {
                <div>
                    @Html.TextArea("shuoshuoinput", new { @class = "kindeditorSimple", placeholder = "输入文字" })
                    <input type="submit" value="发送" />
                </div>
            }
       <script type="text/javascript">
       KindEditor.create('textarea.kindeditorSimple', {
       basePath: '/kindeditor/',
       bodyClass : 'article-content',
       resizeType : 1,
       allowPreviewEmoticons : false,
       allowImageUpload : false,
       items : [
        'emoticons', 'image', 'link'
       ]
       });</script>
        </div>
       @Html.Action("allshuoshuo")
    </div>

    <!--右-->
    <div class="col-md-2"></div>
</div>


