@model JiaoZi.Models.Mallview
@{
    Layout ="~/Views/Shared/Layoutmall.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
   
    @*<link href="~/Content/Mall.css" rel="stylesheet" />*@
    <script>
        window.onload = function () {
            var liss = document.getElementById("navb").getElementsByTagName("li");
            var lis = document.getElementById("navbox").getElementsByTagName("li");
            for (var i = 0; i < liss.length; i++) {
                liss[i].index = i;
                liss[i].onmouseover = function () {

                    for (var j = 0; j < liss.length; j++) {
                        liss[j].className = "";
                        lis[j].className = "";
                    }
                    this.className = "current";
                    lis[this.index].className = "show";
                }
            }
        }
    </script>
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        a {
            color: black;
        }

         a:hover {
                text-decoration: none;
            }

        .content {
            width: 1400px;
            margin: 0 auto;
        }

        .center {
            width: 1005px;
            height: 600px;
            margin-left: 160px;
        }

        .center .small {
                width: 200px;
                height: 280px;
                float: left;
            }

        .center .small .bookpic {
                    width: 200px;
                    height: 200px;
                    margin-top: 10px;
                }

        .bookpic img {
            width: 200px;
            height: 200px;
        }

        .center .small .bookdetail {
            width: 120px;
            margin: 0 auto;
        }

        ul {
            list-style: none;
        }

        .navb{
                margin-top:20px;
            }
        .navb ul{
                height:253px;
                width:90px;
                text-align:center;
                line-height:50px;
            }
        .navb li{
                width:90px;
                height:50px;
                border:1px solid #ccc;
                background-color:darkgray;
                font-size:18px;
                cursor:pointer;
            }
        .navbox {
            border: 1px solid #cccccc;
            height: 600px;
            margin-top:-263px;
            margin-left:90px;
            overflow:hidden;
        }

        .navbox li {
                width: 100%;
                height: 600px;
