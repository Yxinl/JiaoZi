            }

        .navbox span {
                color: darkred;
                font-size: 20px;
            }

        .navbox li.show {
                display: block;
            }

        .hotsale {
            width: 200px;
            height: 400px;
            border: 1px solid #ccc;
            margin-top: 100px;
            margin-left: 155px;
        }

         .hotsale .md {
