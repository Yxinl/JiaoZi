<style>
    .CommentReply {
        width: 900px;
        margin: 0 auto;
    }

        .CommentReply li {
            margin-bottom: 30px;
        }
</style>
<div class="pinglun">
    @using (Ajax.BeginForm("Comment", "Mall", new { id=Model.b.BookID }, new AjaxOptions()
        {
            HttpMethod = "Post",
            UpdateTargetId = "CommentReply",
            InsertionMode = InsertionMode.Replace
    }))
    {
        <textarea name="Comment_content" style="resize:none;border-radius:4px;-webkit-border-radius:4px;-moz-border-radius:4px;height:68px;width:798px;display:block;border:1px solid #c03f3c;"></textarea>
        <span><button>提交</button></span>
    }
</div>
<div class="CommentReply" id="CommentReply">
    <span>全部评论</span>
    <hr />
    <ul>
        @foreach (var i in Model.Bc)
        {

        <li>
            <img src="~/@i.Users.HeadImage" class="img-circle" style="width:50px;" />
            <span style="color:orangered">@i.Users.UserName</span>:
            @i.Comment_Content
            <span style="display:inline-block;margin-left:700px;font-size:12px;">@i.Comment_Time <input type="button" value="回复" /></span>
        </li>

            }
    </ul>
</div>