@model  IEnumerable<JiaoZi.Models.Category>



<style>
    .na {
        /*width: 1519px;*/
        width:1383px;
        height: 40px;
        background-color: dimgray;
        text-align: center;
    }

        .na span {
            width: 70px;
            height: 40px;
            line-height: 40px;
            display: inline-block;
            margin-left: 20px;
        }

        .na a {
            text-decoration: none;
            color: aliceblue;
        }

            .na a:hover {
                color: darkred;
            }
</style>



<div class="na"  >
    @*传入name,进入相应视图*@
    @foreach (var item in Model)
    {
        <span>
            <a href="@Url.Action("BooksType","Mall",new {CategoryName=@item.CategoryName.Trim()})">@item.CategoryName</a>
        </span>
        
    }

</div>
