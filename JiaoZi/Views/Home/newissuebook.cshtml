@model JiaoZi.Models.shouyeban
<div class="container-fluid" style="height:350px;">
    <div class="text-center" style="height:10%;">
        <h1>最新出版</h1>
        <h4>Choose a payment plan that works for you</h4>
    </div>
    <div class="row" style="height:90%;">
        @foreach (var item in Model.Newissuebook)
        {
            <div class="col-md-4" style="height:100%;">
                <div class="panel panel-default text-center" style="height:100%;">
                    <div class="panel-heading" style="height:10%;">

                    </div>
                    <div class="panel-body" style="height:40%;">
                        <img id="top3img" alt="封面" src="../../images/BookImage/@Html.DisplayFor(modelItem=>item.BookImage)" />
                    </div>
                    <div class="panel-footer" style="height:50%;">
                        <h4>@item.BookName</h4>
                        <h3>$@item.Price</h3>
                        <h4>@item.BookAuthor</h4>
                        <button class="btn btn-lg">购买</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
